<h2>Forgot your password?</h2>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => 'form-horizontal' }) do |f| %>
    <% if @user.errors.any? %>
        <div class="alert alert-error">
          <h4>This form contains <%= pluralize(@user.errors.count, "error") %>:</h4>
          <ul>
            <% @user.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <div class="control-group">
      <%= f.label :email, :class => 'control-label' %>
      <div class="controls">
        <%= f.email_field :email, :class => 'text_field', :autofocus => true %>
      </div>
    </div>
    <div class="form-actions">
      <%= f.submit "Send me reset password instructions", :class => 'btn btn-primary' %>
    </div>
<% end %>

<%= render "devise/shared/links" %>