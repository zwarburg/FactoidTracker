<div class="block-panel">
  <div class="block-panel__body">
    <%- model_class = Factoid -%>
    <div class="block-panel__header">
      <h2 class="block-panel__title"><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h2>
    </div>

    <%= form_tag factoids_path, method: :get, :class => "form-inline" do %>
        <%= text_field_tag :search, params[:search] %>
        <%= submit_tag "Search", name: nil, class: "btn btn-default" %>
    <% end %>

    <table class="table table-colorized">
      <thead>
        <tr>
          <th><%= model_class.human_attribute_name(:title) %></th>
          <th><%= model_class.human_attribute_name(:description) %></th>
          <th><%= model_class.human_attribute_name(:tags) %></th>
          <th><%= model_class.human_attribute_name(:name) %></th>
          <th nowrap="nowrap"><%= model_class.human_attribute_name(:created_at) %></th>
          <th><%=t '.actions', :default => t("helpers.actions") %></th>
        </tr>
      </thead>
      <tbody>
        <% @factoids.each do |factoid| %>
          <tr>
            <td><%= link_to factoid.title, factoid_path(factoid) %></td>
            <td><%= truncate(factoid.description, :length =>100) %></td>
            <td><% factoid.tags.each do |tag| %>
                  <%= link_to tag.name, tag_path(tag.name), :class => "btn btn-info btn-mini btn-index" %>
              <% end %></td>
            <td><%= factoid.name %></td>
            <td nowrap="nowrap"><%= l factoid.created_at, format: :short %></td>
            <td nowrap="nowrap">
              <%= link_to '<i class="btn btn-warning icon-pencil"></i>'.html_safe, edit_factoid_path(factoid) %>
              <%= link_to '<i class="btn btn-danger icon-remove"></i>'.html_safe,
                          factoid_path(factoid),
                          :method => :delete,
                          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }%>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <%= link_to t('.new', :default => t("helpers.links.new")),
                new_factoid_path,
                :class => 'btn btn-success' %>
  </div>
</div>