<% @page_title = @factoid.title %>
<%- model_class = Factoid -%>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @factoid.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= link_to @factoid.name, :controller => "factoids", :action => "index", :search => @factoid.name %></dd>
  <% if @factoid.pivotal_link? %>
  <dt><strong><%= model_class.human_attribute_name(:pivotal_link) %>:</strong></dt>
  <dd><%= link_to @factoid.pivotal_link, @factoid.pivotal_link, :target => "_blank" %></dd>
  <% end %>
  <% if @factoid.tags.any? %>
      <dt><strong><%= model_class.human_attribute_name(:tags) %>:</strong></dt>
      <dd>
        <% @factoid.tags.each do |tag| %>
            <%= link_to tag.name, tag_path(tag.name), :class => "btn btn-info btn-small" %>
        <% end %>
      </dd>
  <% end %>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              factoids_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_factoid_path(@factoid), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              factoid_path(@factoid),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
